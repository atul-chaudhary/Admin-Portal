<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:background="@drawable/recyclerviewitem_forsearchbackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_image_users"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/admin_image" />


        <TextView
            android:id="@+id/users_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="Vishwas Khurana"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_gravity="center_vertical"/>


        <ImageView
            android:id="@+id/teacher_or_student_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/teacher_icon"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_gravity="end|bottom">

        <TextView
            android:id="@+id/division_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="7sp"
            android:text="B.tech"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2.6dp"
            android:paddingTop="2.2dp"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/chip_border"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/branch_year_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="7sp"
            android:text="CS"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2.6dp"
            android:paddingTop="2.2dp"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/chip_border"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/section_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="7sp"
            android:text="Sec A"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="2.6dp"
            android:paddingTop="2.2dp"
            android:textAllCaps="false"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@drawable/chip_border"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

</FrameLayout>